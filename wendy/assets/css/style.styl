input, .formField
    border 1px solid $color_basic
    background none
    padding 15px
    margin-bottom 25px
    width 100%

.text-inside-italic
    a
        color $color_brand2
        
.or-image
    position absolute
    width 49px 
    height 100%
    right -24px
    top 0
    z-index 10
    &:before
        width 1px
        background $color_basic
        height 100%
        right 24px
        content ''
        position absolute
        top 0  
    img
        position absolute
        height 49px
        width 49px
        top 50%
        transform translateY(-50%)
    @media(max-width:767px)
        height 49px
        right auto
        bottom 10px
        top auto
        width calc(100% \- 120px)
        &:before
            width 100%
            height 1px
            right auto
            top 25px
            left 0
        img
            top 0
            transform translateX(-50%)
            left 50%
    @media(max-width:375px)
        width calc(100% \- 80px)
            
    

