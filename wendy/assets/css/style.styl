@import url('https://fonts.googleapis.com/css?family=Oswald:300,400,500,700');
@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700');

$color_dark = #303030
$color_basic = #e4e4e4
$color_font = #656464
$color_alert_good = #8be6b1
$color_brand = #bb1818
$color_brand2 = #ff0015
$color_blue = #3953d6
$color_green = #01b931

$color_border_table = #dcdcdc

$color_soft_light = #f9f9f9


$font-first = 'Open Sans', sans-serif
$font-second = 'Oswald', sans-serif


input, a, button
    outline none !important

body
    font-family $font-first
    font-size 16px
    background 
img
    max-width 100%

.back-login
    position fixed
    bottom 0
    left 0
    object-fit cover
    width 100%
    z-index -1

.container-fluid
    margin 40px 0

.container
    position relative
        
.row
    position relative
    margin 0
    padding 0
    
h2, h3, h4    
    font-weight 700
    font-size 30px

h2, h3, h4, p
    color $color_font
 
h2
    font-size 30px
    font-weight 300
    margin-bottom 30px
    font-family $font-second

h3, h4 
    font-family $font-first
    font-weight 600
    
h3
    font-size 16px   
    margin-bottom 20px 
    
h4
    font-size 20px
    margin-bottom 30px 

p
    font-family $font-first

     
.float-middle
    transform translate(-50%,-50%)
    left 50%
    top 50%
    position absolute
    z-index 10
.image-background
    height 100% !important
    width 100%
    object-fit cover
    position absolute
    top 0
    left 50%
    transform translateX(-50%) 
    z-index 1

.name-settings
    text-align left
    position relative
    padding 10px 0 20px
    
    .title-section
        font-size 30px
        color $color_font
        font-weight 300
    .dropdown
        position absolute
        right 0
        top 21px
        @media(max-width:375px)
            display block
            position relative
            top 0
        .btn
            background none
            color #b4b4b4 !important
            text-transform uppercase
            font-size 20px
            padding 0
            width auto
            img
                margin-left 5px
            &:focus, &:active
                box-shadow none !important 
                -webkit-box-shadow none !important 
                -moz-box-shadow none !important     
    .title-section, .dropdown .btn 
        font-weight 300
        font-family $font-second

.content-box
    background white
    box-shadow 0 0 8px rgba(0,0,0,0.2)
    -moz-box-shadow 0 0 8px rgba(0,0,0,0.2)
    -webkit-box-shadow 0 0 8px rgba(0,0,0,0.2)
    padding 50px 60px 70px
    position relative
    @media(max-width:375px)
        padding 30px 40px
    &.no-padding
        padding 0
        .row
            padding 40px 60px
            margin 0
            @media(max-width:375px)
                padding 30px 40px
            &:last-of-type
                padding-top 20px
            form
                .row
                    padding 0 
                    div
                        padding 0
                        @media(min-width:768px)
                            width 32.333333%
                        &:nth-of-type(2)
                            margin 0 15px
                            @media(max-width:768px)
                                margin 0
    .amount-balance
        margin-bottom 25px
        padding-bottom 45px
        border-bottom 1px solid $color_basic 
        div, input, a
            display inline-block
            vertical-align middle
        .form-amount
            @media(max-width:1280px)
                width calc(100% \- 290px)
                max-width inherit
            @media(max-width:768px)
                width 100%
                margin 0 0 15px 0
            .placeholder-colors
                margin-bottom 0 !important
                input
                    width calc(100% \- 60px)
                a 
                    background $color_basic
                    margin-right -3px
                    color #9a9a9a
                    font-size 29px
                    text-decoration none
                    &:hover 
                        background $color_brand2
                        color white
        .label-form-amount
            span
                display block
                font-size 16px
                font-weight 600
                text-align left
                color $color_font
        .current-available
            float right
            margin-top 4px
            font-size 19px
            color $color_font
            font-weight 600
            @media(max-width:1400px)
                margin-top 0
            @media(max-width:1280px)
                display block
                float none
                text-align left
                margin-top 10px
            span
                color $color_brand2
                font-weight bold
                font-size 30px
                margin-left 4px
                display inline
                vertical-align sub
                @media(max-width:1400px)
                    display block
                    text-align right
                    line-height 28px
                @media(max-width:1280px)
                    text-align left
                    margin 0
                    line-height 32px
    .header-couple
        h2
            color $color_font
        .btns 
            margin 15px 0 45px
            background none
            width 100%
            text-align left 
            button
                display inline-block
                vertical-align top
                background $color_basic
                padding 12px 0
                width 340px
                position relative
                font-size 21px
                color $color_font
                border 0
                text-align center
                @media(max-width:860px)
                    width 48.6%
                    font-size 16px
                    padding 12px 10px
                &:last-of-type
                    margin-left -2px
                &:after
                    width 20px
                    height 20px
                    background $color_brand
                    transform rotate(45deg) translateX(-50%)
                    left 45%
                    position absolute
                    bottom -16px
                    display none
                    content ''
                    z-index 0
                &:hover, &.active
                    background $color_brand
                    color white
                    &:after
                        display block
        .content
            .paysForm
                margin-bottom 30px !important
                padding 0
                input
                    margin-right 15px
                input, img
                    vertical-align middle
                    display inline-block

