input  
    &::-webkit-input-placeholder  /* Chrome/Opera/Safari */
      color $color_font
      font-family $font-first
      text-transform none
      font-weight 300
    &::-moz-placeholder  /* Firefox 19+ */
      color $color_font
      font-family $font-first
      text-transform none
      font-weight 300
    &:-ms-input-placeholder  /* IE 10+ */
      color $color_font
      font-family $font-first
      text-transform none
      font-weight 300
    &:-moz-placeholder /* Firefox 18- */
      color $color_font
      font-family $font-first
      text-transform none
      font-weight 300
    &[type="checkbox"]
        border 2px solid #c1c1c1
        height 36px
        width 36px
        -webkit-appearance none
        border-radius 50%
        -moz-border-radius 50%
        -webkit-border-radius 50%
        position relative
        margin-top 0
        padding 0
        vertical-align text-bottom !important
        &:checked
            &:after
                content ''
                background $color_brand2
                height 16px
                width 16px
                border-radius 50%
                -moz-border-radius 50%
                -webkit-border-radius 50%
                position absolute
                top 8px
                left 8px

