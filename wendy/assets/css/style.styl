                img
                    margin-bottom 4px
                p
                    margin 44px 0 40px
                @media(max-width:767px)
                    margin-bottom 0
        img
            display block
            margin 0 auto 
        p 
            margin 40px 0 40px
            font-size 20px
            @media(max-width:767px)
                margin-bottom 20px
            @media(max-width:375px)
                font-size 16px
        a 
            width 70%
            font-size 21px
            @media(max-width:375px)
                font-size 16px
                width 100%
            
.amount-balance
    .form-amount
        max-width 450px
        width 100%
        margin-right 10px
        a 
            width 60px
            text-align center
